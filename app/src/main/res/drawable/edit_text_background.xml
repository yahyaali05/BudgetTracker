<!-- res/drawable/edit_text_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bestimmt die Hintergrundfarbe der Form (weiß) -->
    <solid android:color="#FFFFFF" />

    <!-- Setzt den Radius der Ecken auf 8dp, was die Ecken abgerundet macht -->
    <corners android:radius="8dp" />

    <!-- Fügt einen Rand (Streifen) mit der Farbe #DDDDDD und einer Breite von 1dp hinzu -->
    <stroke android:color="#DDDDDD" android:width="1dp" />

    <!-- Fügt inneren Abstand (Padding) zu allen Seiten des Elements hinzu:
         Links, Rechts, Oben und Unten jeweils 12dp -->
    <padding android:left="12dp" android:right="12dp" android:top="12dp" android:bottom="12dp" />
</shape>
